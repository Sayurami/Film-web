  <a href="/upload">âž• Upload Film</a>
  <hr>
  <% if (films.length === 0) { %>
    <p>No films uploaded yet.</p>
  <% } %>
  <% films.forEach(film => { %>
    <div style="border:1px solid #ccc; padding:10px; margin:10px; width:300px;">
      <img src="<%= film.image %>" style="width:100%; border-radius:8px;"><br>
